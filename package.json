{
  "name": "gostreampuller",
  "version": "0.0.1",
  "description": "Microservice used to manage words.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MohammadBnei/gostreampuller"
  },
  "keywords": [
    "go"
  ],
  "author": "Mohammad-Amine BANAEI",
  "license": "DWTFYW",
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "infile": "CHANGELOG.md"
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.3"
  }
}
